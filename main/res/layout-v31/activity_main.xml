<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral10"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="?android:attr/windowSplashScreenIconBackgroundColor"
        android:text="Dalvik VM User Agent"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/userAgentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral20"
        android:gravity="start|top"
        android:hint="这是游戏或应用进行https.Post请求时 \n 所使用的 User Agent"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/windowSplashScreenIconBackgroundColor"
        android:text="\n\n Device Info"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/deviceInfoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_neutral20"
        android:gravity="start|top"
        android:hint="这是游戏或应用进行https.Post请求时 \n 所使用的 Device Info"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        android:textStyle="italic" />

    <Button
        android:id="@+id/getInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="读取设备信息"

        android:textColor="?android:attr/textColorLinkInverse" />
</LinearLayout>
